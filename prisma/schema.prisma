generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String
}

model User {
  id             Int             @id @default(autoincrement())
  telegramId     String          @unique
  username       String?         @unique
  balance        Float           @default(0)
  svo_score      Int             @default(0)
  createdAt      DateTime        @default(now())
  wordleAttempts WordleAttempt[] // связь с попытками
  wordle_score   Int             @default(0)
  steam_id       String?         @unique
  steamActivity  SteamActivity?  // связь с активностью Steam
}

model Wordle {
  id            Int             @id @default(autoincrement())
  answer        String
  createdAt     DateTime        @default(now())
  WordleAttempt WordleAttempt[]
}

model WordleAttempt {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  wordle    Wordle   @relation(fields: [wordleId], references: [id])
  wordleId  Int
  word      String
  createdAt DateTime @default(now())
  attempt   Int // номер попытки пользователя на этот Wordle
}

model SteamActivity {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int      @unique
  personaname String   // имя пользователя в Steam
  currentGame String?  // текущая игра (null если не в игре)
  lastChecked DateTime @default(now()) // время последней проверки
  updatedAt   DateTime @updatedAt
}
